include includes/_head.pug
  
body
  include includes/_header.pug
  section.jumbotron
      
  section.join-section.container.mt-5
    .join-heading
      h1.h1.text-center Forgot your password?
      p.mt-4.lead.text-center That's ok, it happens! Enter your email<br> below to reset your password
    .row
      .col-lg-3
      .col-lg-6
        .card.p-4
          form
            .form-row
              .form-group.col-md-12
                label.display-4(for='emailAddress') Email
                input#emailAddress.form-control(type='email')
            a.btn.btn-success.btn-block.btn-lg.mt-4(href='account-entered.html') Reset my password
        .text-center.mt-3
          span Nevermind, I remembered my password! 
          a(href="login.html") Login
      .col-lg-3

  include includes/_footer.pug
  include includes/_footer-scripts.pug