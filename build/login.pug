include includes/_head.pug
  
body
  include includes/_header.pug
  section.jumbotron
      
  section.join-section.container.mt-5
    .join-heading
      h1.h1.text-center Hey there!
      p.lead.text-center Login to continue
    .row
      .col-lg-3
      .col-lg-6
        .card.p-4
          .row.mt-3
            .col-xl-6.mb-3
              button.btn.btn-block.btn-google
                .fa.fa-google.mr-2
                | Login with google
            .col-xl-6
              button.btn.btn-block.btn-facebook
                .fa.fa-facebook.mr-2
                | Login with facebook
          hr.border-text.my-5
          form
            .form-row
              .form-group.col-md-12
                label.display-4(for='emailAddress') Email
                input#emailAddress.form-control(type='email')
              .form-group.col-md-12
                label.display-4(for='password') Password
                input#password.form-control(type='password')
                small
                  a.d-inline-block.text-muted.mt-1(href="forgot-password.html" style="") Forgot password
            a.btn.btn-success.btn-block.btn-lg.mt-4(href='account-entered.html') Login
        .text-center.mt-3
          span Don't have an account? 
          a(href="join.html") Join Now
      .col-lg-3

  include includes/_footer.pug
  include includes/_footer-scripts.pug