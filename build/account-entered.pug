doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(href='https://fonts.googleapis.com/css?family=Muli:300,400,600,700,800,900', rel='stylesheet')
  link(href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet')
  link(rel='stylesheet' href='css/main.css')
  title GiveawayApp
  
body
  nav.navbar.navbar-expand-lg.navbar-dark.navbar-transparent
    a.navbar-brand(href='index.html')
      <img src="img/logo.png" width="125" class="d-inline-block align-top" alt="">
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item.active
          a.nav-link(href='#')
            | Giveaways 
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='#') Winners
        li.nav-item
          a.nav-link(href='#') Pricing
        li.nav-item
          a.btn.btn-success(href="join.html")
            i.fa.fa-pencil.mr-2
            | Join Now


  section.jumbotron.jumbotron-sm
    .container
      .jumbo-shift.offset-lg-4
        h1.h1.text-white Manage


  section
    .container
      .row
        .account-tabs-wrapper.col-lg-8.order-lg-2
          ul.account-tabs.nav.nav-pills.mb-3
            li.nav-item
              a.nav-link.active(href="account-entered.html")
                i.fa.fa-ticket.mr-2
                | Entered
            li.nav-item
              a.nav-link(href="account-saved.html")
                i.fa.fa-heart.mr-2
                | Saved
            li.nav-item
              a.nav-link(href="account-settings.html")
                i.fa.fa-cog.mr-2
                | Settings

          .tab-content
            span Entered

        .infocard-wrapper.col-lg-4.order-lg-1
          .account-infocard
            .upper-well
              .profile-pic
                img(src="img/profile-placeholder.png")
              h5.h5.account-name Phillip Kovalev
              p.account-email phillipkova@gmail.com
            hr
            .lower-well
              .account-plan
                h5.h5.plan-type Free Plan
                .plan-metadata
                  .metadata-text 3 tickets per day
                  .metadata-icons
              a.btn.btn-block.btn-success(href="#") Get unlimited tickets 
                b $5/mo
                i.fa.fa-arrow-right.ml-2
              p.tiny-title Upgrade to enter unlimited giveaways!
          a.btn.btn-block.btn-lg.btn-logout.mt-5(href="login.html")
            i.fa.fa-sign-out.fa-flip-horizontal.mr-3
            | Logout of my account


  footer.text-center.mt
    .social-media-links.mb-4
      a.icon-fb.mx-2(href="#")
        img(src="img/facebook-outline.png")
      a.icon-tw.mx-2(href="#")
        img(src="img/twitter-outline.png")
      a.mx-2(href="#")
    ul.list-inline
      li.list-inline-item
        a(href="#") Disclaimer
      li.list-inline-item
        a(href="#") Privacy Policy
      li.list-inline-item
        a(href="#") Terms of Use
      li.list-inline-item
        a(href="#") Submit Giveaway
      li.list-inline-item
        a(href="#") Contact
    p.text-center Â©2018 GiveAway.App All rights reserved


  script(type='text/javascript' src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
  script(type='text/javascript' src='js/bootstrap.bundle.js')
  script(type='text/javascript' src='js/scripts-min.js')
