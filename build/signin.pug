doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(href='https://fonts.googleapis.com/css?family=Muli:300,400,600,700,800,900', rel='stylesheet')
  link(href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet')
  link(rel='stylesheet' href='css/main.css')
  title GiveawayApp
  
body
  nav.navbar.navbar-expand-lg.navbar-dark.navbar-transparent
    a.navbar-brand(href='index.html')
      <img src="img/logo.png" width="125" class="d-inline-block align-top" alt="">
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item.active
          a.nav-link(href='#')
            | Giveaways 
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='#') Winners
        li.nav-item
          a.nav-link(href='#') Pricing
        li.nav-item
          a.btn.btn-success(href="join.html")
            i.fa.fa-pencil.mr-2
            | Join Now


  section.jumbotron
    .container
      .text-center.text-white
  section.container.mt-5
    .row
      .col-lg-3
      .col-lg-6
        h3.h3.mb-4.text-center Sign In
        .card.p-4
          form
            .form-row
              .form-group.col-md-12
                label.display-4(for='emailAddress') Email
                input#emailAddress.form-control(type='email')
              .form-group.col-md-12
                label.display-4(for='password') Password
                input#password.form-control(type='password')
            button.btn.btn-success.btn-block.btn-lg.mt-4(type='submit') Login
        .text-center.mt-3
          span Don't have an account? 
          a(href="join.html") Join Now
      .col-lg-3




  footer.text-center.mt
    .social-media-links.mb-4
      a.icon-fb.mx-2(href="#")
        img(src="img/facebook-outline.png")
      a.icon-tw.mx-2(href="#")
        img(src="img/twitter-outline.png")
      a.mx-2(href="#")
    ul.list-inline
      li.list-inline-item
        a(href="#") Disclaimer
      li.list-inline-item
        a(href="#") Privacy Policy
      li.list-inline-item
        a(href="#") Terms of Use
      li.list-inline-item
        a(href="#") Submit Giveaway
      li.list-inline-item
        a(href="#") Contact
    p.text-center Â©2018 GiveAway.App All rights reserved


  script(type='text/javascript' src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
  script(type='text/javascript' src='js/bootstrap.bundle.js')
  script(type='text/javascript' src='js/scripts-min.js')
